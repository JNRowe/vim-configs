{
    "*": {
        "make": "ninja -C ~ -j1"
    },
    "FAQ.rst": {
        "type": "faq"
    },
    "README.rst": {
        "type": "readme"
    },
    "dein.rst": {
        "alternate": "{}.vim",
        "type": "dein"
    },
    "ftdetect/*.rst": {
        "alternate": "ftdetect/{}.vim",
        "template": [
            "``{file|dirname|basename}/{}``",
            "===",
            "",
            "::",
            "",
            "    augroup jnrowe_ftdetect",
            "        autocmd BufRead,BufNewFile FIXME setfiletype FALLBACK FIXME",
            "    augroup END"
        ],
        "type": "fconfig"
    },
    "localcfg/*.rst": {
        "alternate": "localcfg/{}.vim",
        "template": [
            "``{file|dirname|basename}/{}``",
            "===",
            "",
            ".. include:: ../.includes/scriptencoding.rst",
            "",
            "::",
            ""
        ],
        "type": "lconfig"
    },
    "localcfg/plugin_*.rst": {
        "alternate": "localcfg/{}.vim",
        "template": [
            "``{file|dirname|basename}/{}``",
            "===",
            "",
            ".. include:: ../.includes/scriptencoding.rst",
            "",
            "::",
            "",
            "        call MnemonicMap('{capitalize}', {'buffer': v:true})"
        ],
        "type": "xconfig"
    },
    "vimrc.d/*.rst": {
        "alternate": "vimrc.d/{}.vim",
        "template": [
            "``{file|dirname|basename}/{}``",
            "===",
            "",
            ".. include:: ../.includes/scriptencoding.rst",
            "",
            "::",
            ""
        ],
        "type": "rconfig"
    },
    "vimrc.rst": {
        "alternate": "{}.vim",
        "type": "rc"
    }
}
